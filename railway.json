{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE"
    },
    "deploy": {
        "startCommand": "python manage.py migrate && gunicorn gutendex.wsgi --bind 0.0.0.0:${PORT:-8080}",
        "healthcheckPath": "/health",
        "restartPolicyType": "ON_FAILURE"
    }
}